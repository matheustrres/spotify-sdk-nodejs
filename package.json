{
  "name": "@matheustrres/spotify-sdk-node",
  "author": {
    "name": "Matheus Torres",
    "email": "matheustrres.rj@gmail.com"
  },
  "description": "An unofficial, easy-to-use, user-friendly and no dependencies Node.js SDK for Spotify Web API",
  "version": "1.0.0",
  "main": "./dist/lib/index.js",
  "typings": "./dist/lib/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matheustrres/spotify-sdk-node.git"
  },
  "bugs": {
    "url": "https://github.com/matheustrres/spotify-sdk-node/issues"
  },
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "bundle": "npm run build && npm pack",
    "publish": "npm publish --access public",
    "test": "jest --runInBand --no-cache --verbose --passWithNoTests",
    "test:cov": "npm test -- --coverage",
    "format": "prettier --write \"{lib,tests}/**/*.ts\"",
    "lint": "eslint \"{lib,tests}/**/*.ts\" --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@swc/core": "^1.3.70",
    "@swc/jest": "^0.2.27",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.17.1",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.45.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "husky": "^8.0.0",
    "jest": "^29.6.1",
    "jest-mock-extended": "^3.0.5",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "keywords": [
    "node.js",
    "spotify",
    "sdk",
    "spotify-web-api",
    "wrapper",
    "easy-to-use"
  ]
}